{
  "name": "cosmetics-platform",
  "version": "1.0.0",
  "private": true,
  "description": "现代化化妆品品牌官网与后台管理系统",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
