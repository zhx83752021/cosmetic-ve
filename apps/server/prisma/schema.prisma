// Prisma schema file
// 数据库模型定义

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id        Int      @id @default(autoincrement())
  username  String?  @unique
  email     String?  @unique
  phone     String   @unique
  password  String
  nickname  String?
  avatar    String?
  gender    String?
  birthday  DateTime?
  level     Int      @default(1)
  points    Int      @default(0)
  role      String   @default("user") // user, admin
  status    String   @default("active") // active, banned
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  orders       Order[]
  addresses    Address[]
  userCoupons  UserCoupon[]
  reviews      Review[]
  favorites    Favorite[]

  @@map("users")
}

// 商品分类表
model Category {
  id        Int      @id @default(autoincrement())
  name      String
  icon      String?
  image     String?
  parentId  Int?
  sort      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  products  Product[]
  parent    Category? @relation("CategoryTree", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryTree")

  @@map("categories")
}

// 商品表
model Product {
  id           Int      @id @default(autoincrement())
  name         String
  subTitle     String?
  images       String[] // JSON array
  price        Decimal  @db.Decimal(10, 2)
  originalPrice Decimal? @db.Decimal(10, 2)
  categoryId   Int
  brand        String?
  sales        Int      @default(0)
  stock        Int      @default(0)
  description  String?  @db.Text
  details      String?  @db.Text
  ingredients  String?  @db.Text
  usage        String?  @db.Text
  status       String   @default("active") // active, inactive
  isNew        Boolean  @default(false)
  isHot        Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // 关联
  category     Category  @relation(fields: [categoryId], references: [id])
  skus         ProductSku[]
  orderItems   OrderItem[]
  reviews      Review[]
  favorites    Favorite[]

  @@map("products")
}

// 商品SKU表
model ProductSku {
  id        Int      @id @default(autoincrement())
  productId Int
  name      String
  price     Decimal  @db.Decimal(10, 2)
  stock     Int      @default(0)
  image     String?
  specs     Json     // JSON object {color: 'red', size: 'M'}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  product    Product     @relation(fields: [productId], references: [id])
  orderItems OrderItem[]

  @@map("product_skus")
}

// 订单表
model Order {
  id             Int      @id @default(autoincrement())
  orderNo        String   @unique
  userId         Int
  status         String   @default("pending") // pending, paid, shipped, completed, cancelled, refunding, refunded
  totalAmount    Decimal  @db.Decimal(10, 2)
  discountAmount Decimal  @default(0) @db.Decimal(10, 2)
  shippingFee    Decimal  @default(0) @db.Decimal(10, 2)
  payAmount      Decimal  @db.Decimal(10, 2)
  addressData    Json     // JSON object
  remark         String?
  paidAt         DateTime?
  shippedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // 关联
  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[]

  @@map("orders")
}

// 订单项表
model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int
  skuId     Int?
  name      String
  image     String
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int
  specs     Json?    // JSON object
  createdAt DateTime @default(now())

  // 关联
  order      Order       @relation(fields: [orderId], references: [id])
  product    Product     @relation(fields: [productId], references: [id])
  sku        ProductSku? @relation(fields: [skuId], references: [id])

  @@map("order_items")
}

// 收货地址表
model Address {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  phone     String
  province  String
  city      String
  district  String
  detail    String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  user User @relation(fields: [userId], references: [id])

  @@map("addresses")
}

// 优惠券表
model Coupon {
  id          Int      @id @default(autoincrement())
  name        String
  type        String   // discount, fixed
  value       Decimal  @db.Decimal(10, 2)
  minAmount   Decimal  @db.Decimal(10, 2)
  maxAmount   Decimal? @db.Decimal(10, 2)
  total       Int
  used        Int      @default(0)
  startTime   DateTime
  endTime     DateTime
  description String?
  status      String   @default("active") // active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关联
  userCoupons UserCoupon[]

  @@map("coupons")
}

// 用户优惠券表
model UserCoupon {
  id        Int      @id @default(autoincrement())
  userId    Int
  couponId  Int
  status    String   @default("available") // available, used, expired
  usedAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  user   User   @relation(fields: [userId], references: [id])
  coupon Coupon @relation(fields: [couponId], references: [id])

  @@map("user_coupons")
}

// 文章表
model Article {
  id         Int      @id @default(autoincrement())
  title      String
  cover      String
  summary    String?
  content    String   @db.Text
  categoryId Int?
  author     String
  views      Int      @default(0)
  likes      Int      @default(0)
  tags       String[] // JSON array
  status     String   @default("published") // draft, published
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("articles")
}

// 评论表
model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  rating    Int      // 1-5
  content   String   @db.Text
  images    String[] // JSON array
  status    String   @default("approved") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("reviews")
}

// 收藏表
model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())

  // 关联
  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
  @@map("favorites")
}
